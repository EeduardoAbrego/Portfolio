 .card {
    border-radius: 30px;
    height: 500px;
    display: flex;
    width:100%;
    align-items: center;
    position: relative;
    border: 1px solid rgb(53, 96, 189);
    padding: 10px;
    overflow: hidden;
}

.card-img-container {
    width:33%;
    position: relative;
    height: 90%; /* Imagen ocupa el 70% del contenedor */
    overflow: hidden;
}

.card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1.5rem;
}

.card-data {
    width: 60%;
    
    padding: 1.5rem 2rem;
    box-shadow: 0 8px 24px hsla(0, 0%, 0%, .15);
    border-radius: 1rem;
    position: absolute;
    bottom: -6rem;
    left: 20%;
    
    opacity: 0;
    transition: opacity 1s, bottom 1s;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.card-description {
    width:40%;
    text-align: center;
    margin: 0 10px;
    padding: 40px;
    text-wrap: balance;
}

.card-title {
    font-size: larger;
    font-weight: 500;
    color: black;
    margin-bottom: .75rem;
}

.card-button {
    text-decoration: none;
    font-size: small;
    font-weight: 500;
    color: black;
}

.card-button:hover {
    text-decoration: underline;
}

/* Animaciones */
/* .card-img-container:hover .card-data {
    bottom: 1rem;
