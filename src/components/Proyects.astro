   .ert{
    max-width: 90%;
    box-shadow: 10px 10px  rgb(53, 96, 189);
    margin: 30px;
    background: none;
    border-radius: 30px;
    height: 400px;
    display: flex;
    position: relative;
    border: 1px solid  rgb(53, 96, 189);
    padding: 10px;
   }

   .container{
    display: grid;
    place-content: center;
    margin-inline: .7rem;
  
    width: 30%;
}

.card-container{
    display: grid;
    row-gap: 3.5rem;
  width: 100%;
  height: 100%;
  align-items: center;

}


.card-article{
    position: relative;
    overflow: hidden;
    
}

.card-img{
    width: 100%;

    position: relative;
    border-radius: 1.5rem;
   }

.card-data{
    width: 60%;
    background: rgba(0, 4, 224, 0.514);
    padding: 1.5rem 2rem;
    box-shadow: 0 8px 24px hsla(0, 0%, 0%, .15);
    border-radius: 1rem;
    position:absolute;
    bottom: -10rem;
    left: 0;
    right: 0;
    margin-inline: auto;
    opacity: 0; 
    transition: opacity 1s 1s;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.card-description{
    display: block;
    font-size: small;
    margin-bottom: .25rem;
}

.card-title {
    font-size: larger;
    font-weight: 500;
    color: black;
    margin-bottom: .75rem;
}

.card-button{
    text-decoration: none;
    font-size: small;
    font-weight: 500;
    color: black;
}

.card-button:hover{
    text-decoration: underline;
}

.card-article:hover .card-data {
    animation: show-data 1s forwards;
    opacity: 1;
    transition: opacity .3s ;
}

.card-article:hover {
    animation: remove-overflow 2s forwards;

}

.card-article:not(:hover){
    animation: show-overflow 2s forwards;
}

.card-article:not(:hover) .card-data{
    animation: remove-data 1s forwards;
}

@keyframes show-data {
    
    50% {
        transform: translateY(-15rem);
        
    }
    100% {
        transform: translateY(-7rem);
        
    }
}

@keyframes remove-overflow {
    to {
        overflow: initial;
    }
}

@keyframes remove-data {
    0% {
        transform: translateY(-7rem);
    }
    50% {
        transform: translateY(-12rem);
    }
    100% {
        transform: translateY(.5rem);
    }
}


@keyframes show-overflow {
    0% {
        overflow: initial;
        pointer-events: none;
    }
    50% {
        overflow: hidden;
    }
    100% {
        overflow: hidden;
    }

}





