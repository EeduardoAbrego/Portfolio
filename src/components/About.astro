  <style>
    .slider {
      display: flex;
      height: auto;
      margin: auto;
      overflow: hidden;
      align-items: center;
    }
    .slider:before {
      position: absolute;
      z-index: 1;
      left: 0;
      content: '';
      width: 50.958%;
      height: 110px;
    }

    .slider:after {
      position: absolute;
      right: 0;
      content: '';
      width: 50.958%;
      height: 110px;
    }
    .slider .slide-track {
      display: flex;
      animation: scroll 50s linear infinite;
      -webkit-animation: scroll 50s linear infinite;
      width: calc(240px * 24);
    }
    .slider .slide {
      width: 180px;
      height: auto;
      padding: 10px;
      margin: 20px;
      border-radius: 8px;
      transition: all 0.5s ease;

      display: flex;
      align-items: center;
      justify-content: center;
    }

    .slider .slide img {
      height: auto;
      width: 140px;
    }

    .slider .slide:hover {
      scale: 1.3;
    }

    @keyframes scroll {
      0% {
        -webkit-transform: translateX(0);
        transform: translateX(0);
      }

      100% {
        -webkit-transform: translateX(calc(-240px * 12));
        transform: translateX(calc(-240px * 12));
      }
    }

    .sec {
      display: flex;
      justify-content: center;
    }
    img {
      width: 100px;
      height: 100px;
    }
    .glass {
      margin: auto 10px;
      border-radius: 5px 5px;

      background: #b8b1da10;
      backdrop-filter: blur(0.2rem);
      -webkit-backdrop-filter: blur(0.4rem);
    }
    p {
      margin: 20px;
      text-wrap: balance;
      font-size: 25px;
      color: aliceblue;
    }

    h1 {
      position: relative;
      color: aliceblue;
      text-align: center;
      font-size: 40px;
    }
    section {
      margin: 20px;
